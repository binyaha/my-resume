  <div class = "row">
    <%= render partial: "shared/user_profile", locals: {obj: @user} %>

    <div class = "col-xs-8">
      <% @works.each do |work| %>
        <div class = "col-xs-6">
          <div class = "row">
            <div class = "col-xs-6">
              <% if work.photo.present? %>
                <%= link_to work.src do %>
                  <%= image_tag work.photo, width: "100%" %>
                <% end %>
              <% else %>
                <%= link_to work.src do %>
                  <%= image_tag "project.png", width: "100%" %>
                <% end %>
              <% end %>
            </div>
            <div class = "col-xs-6">
              <div>
                <%= work.project_name %>
              </div>
              <div>
                <%= link_to "edit", edit_work_path(work)  %>
                <%= link_to "delete",work_path(work), method: :delete  %>
              </div>
            </div>
          </div>
          </div>
        <% end %>
      </div>
      <% if @user == current_user %>
        <div class = "col-xs-6">
          <%= link_to new_work_path(@work) do %>
            <%= image_tag "plus.jpg", width: "35%" %>
          <% end %>
        </div>
      </div>
    </div>


