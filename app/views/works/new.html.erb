
  <div class="row">
    
      <%= form_for @work do |f| %>
        <div class="col-xs-4 center">
            <% if @work.photo.present? %>
              <%= image_tag @work.photo, class: "img-circle big-img " %>
            <% else %>
              <%= image_tag "project.png", class: "img-circle big-img " %>
            <% end %>
            <br>
            <br>
          
            <%= f.file_field :photo, title: "Please choose file", class: "file-picker" %>
        
        </div>
      
        
        <div class="col-xs-8">
          <form class="form-horizontal">
            <div class="form-group">
              <%= f.text_field :project_name, class: "form-control holder",placeholder: "You name.." %>
            </div>
             <div class="form-group">
              <%= f.text_field :src, class: "form-control holder",placeholder: "Your SRC" %>
            </div>

            <div class="form-group">
              <%= f.text_field :git_src, class: "form-control holder",placeholder: "Your git.." %>
            </div>
              
            <div class="form-group">
              <%= f.text_area :description, rows: 3, class: "form-control holder",placeholder: "Introduct you self.." %>
            </div>
            <div class="form-group">
              <%= f.submit class: "btn btn-primary"%>
            </div>
          </form>
        </div>
      <% end %>
    </div>

