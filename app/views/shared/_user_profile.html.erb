<div class = "row">
  <div class="col-xs-4 user-block">
    <div class="center">
      <% if obj.avatar.present? %>
        <%= image_tag obj.avatar, class: "big-img" %>
      <% else %>
        <%= image_tag "default.jpg", class: "big-img" %>
      <% end %> 
    </div>
    <br>
    <div class="center">    
        <%= obj.name %>
    </div>
    <div class="center intro">
      <%= obj.intro %>
    </div>
    <hr>
    <div class="center">
      <%= link_to "經歷", "#" %>
    </div>
    <div class="center">
      <%= link_to "作品", "#" %>
    </div>
    <div class="center">
      <%= link_to "聯絡我", "#" %>
    </div>

    <br>
    <% if obj == current_user %>
      <div class="center">
        <%= link_to "Edit profile", "#", class: "my-btn btn btn-md btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="col-xs-8 user-block">
    <h2>Work experiences and Education</h2>
    <% @items.each do |item| %>
      <li>
        <%= item.title %>
        <%= item.description %>
      </li>
    <% end %>


    <%= form_for @item do |f| %>
      <%= f.text_field :title, class: "form-control holder",placeholder: "Say something..." %>
      <br>
      <%= f.text_area :description, class: "form-control holder",placeholder: "Say something..." %>
      <br>
      <%= f.submit class: "btn btn-primary" %>
      <br>
      <br>
    <% end %>
    

  </div>

</div>