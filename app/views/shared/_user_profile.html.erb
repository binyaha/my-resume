
  <div class="col-xs-4 user-block">
    <div class="center">
      <% if obj.avatar.present? %>
        <%= image_tag obj.avatar, class: "big-img" %>
      <% else %>
        <%= image_tag "default.jpg", class: "big-img" %>
      <% end %> 
    </div>
    <br>
    <div class="center">    

    </div>
    <div class="intro">

    </div>
    <hr>
    <div class="center">
      <%= link_to "經歷", user_items_path(obj) %>
    </div>
    <div class="center">
      <%= link_to "作品", user_works_path(obj) %>
    </div>
    <div class="center">
      <%= link_to "聯絡我", contacks_user_path(obj) %>
    </div>

    <br>
    <% if obj == current_user %>
      <div class="center">
        <%= link_to "Edit profile", edit_user_path(obj), class: "my-btn btn btn-md btn-primary" %>
      </div>
    <% end %>
  </div>


